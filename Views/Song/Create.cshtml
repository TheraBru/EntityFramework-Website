@model moment32.Models.Song

@{
    ViewData["Title"] = "Lägg till ny låt";
}

<h1>Lägg till ny låt</h1>

<section>
    <h2>Låt</h2>
    <hr />
    <div >
        <div >
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="errorMsg"></div>
                <div>
                    <label asp-for="SongName" ></label>
                    <input asp-for="SongName"  />
                    <span asp-validation-for="SongName" class="errorMsg"></span>
                </div>
                <div>
                    <label asp-for="RecordId"></label>
                    <select asp-for="RecordId"  asp-items="ViewBag.RecordId"></select>
                </div>
                <div>
                    <input type="submit" value="Lägg till" class="btn" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Till alla låtar</a>
    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
